<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_placemark_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@android:color/holo_blue_bright"
        android:contentDescription="@null" />

    <ProgressBar
        android:id="@+id/item_placemark_progress"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerInParent="true"
        android:indeterminate="true" />

    <ImageView
        android:id="@+id/item_placemark_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:contentDescription="@string/accessibility_image_load_failed"
        android:src="@drawable/ic_image_accent_96dp"
        android:visibility="gone" />
</RelativeLayout>